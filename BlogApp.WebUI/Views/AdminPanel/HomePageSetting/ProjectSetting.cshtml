@model BlogApp.WebUI.Models.ProjectViewModel
@{
    ViewData["Title"] = "ProjectSetting";
    Layout = "~/Views/Shared/_AdminLayouts.cshtml";
}



<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-11">
                                <h3 class="card-title">Projects</h3>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-success btn-sm">Add <i>+</i> </button>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 10px">ID</th>
                                    <th>Title</th>
                                    <th>Progress</th>
                                    <th style="width: 40px">Label</th>
                                    <th style="width: 115px">Operation</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var project in Model.Projects)
                                {


                                    <tr>
                                        <td>@project.Id</td>
                                        <td>@project.Title</td>
                                        <td>
                                            <div class="progress progress-xs">
                                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-danger">55%</span></td>

                                        <td>
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <a asp-controller="AdminPanel" asp-action="ProjectSetting" asp-route-id="@project.Id">
                                                        <button class="btn btn-warning btn-sm">UPT</button>
                                                    </a>
                                                </div>

                                                <div class="col-sm-6">
                                                    <a asp-controller="AdminPanel" asp-action="ProjectSetting" asp-route-id="@project.Id">
                                                        <button class="btn btn-warning btn-sm">UPT</button>
                                                    </a>

                                                    <button class="btn btn-danger btn-sm">DEL</button>
                                                </div>
                                            </div>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
</section>